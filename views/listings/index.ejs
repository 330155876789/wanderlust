                    <div class="card custom-card " >
                        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 14rem ;" alt="<%= listing.title %>">
                        <div class="card-body" >
                            <h5 class="card-title"><%= listing.title %></h5>
                            <!-- <p class="card-text"><%= listing.description %></p> -->
                            <p><span>â‚¹</span> <%= listing.price.toLocaleString("en-IN") %> /night</p>
                        </div>
                    </div>
                </div>
            </a>
            <% } %>
